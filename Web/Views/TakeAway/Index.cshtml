@model IEnumerable<Web.Models.TakeAway>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

<h1>Pedidos - Take Away</h1>

<p>
    <div class="row">
        <div class="col-sm">
            <a asp-action="Create" class="btn btn-primary">Cargar pedido</a>
        </div>
    </div>
</p>

<form method="get" asp-action="Index">
    <div class="row mb-3">
        <div class="col">
            <input type="text" class="form-control col-sm" name="search" id="search" placeholder="Ingrese el nombre del cliente" />
        </div>
        <div class="col">
            <input type="submit" value="Buscar" name="search" id="search" class="btn btn-warning" />

            <input asp-action="Index" type="submit" value="Limpiar búsqueda" id="submit" class="btn btn-secondary" />
        </div>
    </div>
</form>

@if (Model.Count() == 0)
{
    <p class="text-danger">No se encontraron clientes con ese nombre.</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Cliente 
            </th>
            <th>
                Horario de entrega
            </th>
            <th>
                Precio a cobrar
            </th>
            <th>
                Fecha de registro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
