@model IEnumerable<Web.Models.Plato>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

<h1>Platos</h1>

<p>
    <a asp-action="Create">Crear nuevo plato</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Plato
            </th>
            <th>
                Clasificación
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidad)
            </th>
            <th>
                Tipo de plato
            </th>
            <th>
                Porción
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.ImagemComida"
                     height="auto" width="150"
                     asp-append-version="true" />
                <br>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClasificacionComida.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponibilidad.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoComida.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Porcion.Descripcion)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.Precio)
            </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
