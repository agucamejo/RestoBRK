@model Web.Models.Plato

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del plato</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Imagen 
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.ImagemComida" alt="@Model.Descripcion" class="img-fluid" style="max-width: 100%; max-height: 300px;" />
        </dd>
        <dt class = "col-sm-2">
            Clasificación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClasificacionComida.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disponibilidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disponibilidad.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Tipo de comida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoComida.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Porción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Porcion.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver a la tabla</a>
</div>
