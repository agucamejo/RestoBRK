@model Web.Models.Promociones

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de una promoción</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListaPrecios.Producto)
        </dd>
        <dt class = "col-sm-2">
            Método de pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetodoPago.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Monto de variación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MontoVariacion.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Precio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarifaPrecio)
        </dd>
        <dt class = "col-sm-2">
            Valido hasta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValidoHasta)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver a la tabla</a>
</div>
