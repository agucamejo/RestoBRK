@model Web.Models.Promociones

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar promoción</h1>

<h3>¿Está seguro que desea eliminar esta promoción?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListaPrecios.Producto)
        </dd>
        <dt class = "col-sm-2">
            Método de pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetodoPago.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Monto de variación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MontoVariacion.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Precio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarifaPrecio)
        </dd>
        <dt class = "col-sm-2">
            Valido hasta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValidoHasta)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la tabla</a>
    </form>
</div>
