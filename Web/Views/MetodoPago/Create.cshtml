@model Web.Models.MetodoPago

@{
    ViewData["Title"] = "Create";
}

<h1>Crear método de pago</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Método de pago</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="VariaciónPago" class="control-label">Variación de pago</label>
                <input asp-for="VariaciónPago" class="form-control" />
                <span asp-validation-for="VariaciónPago" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MontoVariacion" class="control-label">Monto de variación</label>
                <input asp-for="MontoVariacion" class="form-control" />
                <span asp-validation-for="MontoVariacion" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FechaRegistro" class="control-label">Fecha de registro</label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index">Volver a la tabla</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
