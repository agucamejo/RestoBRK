@model Web.Models.MetodoPago

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del método de pago</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Variación de pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VariaciónPago)
        </dd>
        <dt class = "col-sm-2">
            Monto de variación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MontoVariacion)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver a la tabla</a>
</div>
