@model Web.ViewModels.BebidaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear bebida</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Imagem" class="control-label">Imagen</label>
                <div class="custom-file">
                    <input asp-for="Imagem" class="custom-file-input" id="customFile" type="file" accept=".jpg, .jpeg, .png" />
                </div>
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ClasificacionBebidaRefId" class="control-label">Clasificación</label>
                <select asp-for="ClasificacionBebidaRefId" class ="form-control" asp-items="ViewBag.ClasificacionBebidaRefId"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TipoBebidaRefId" class="control-label">Tipo de bebida</label>
                <select asp-for="TipoBebidaRefId" class ="form-control" asp-items="ViewBag.TipoBebidaRefId"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TamanoRefId" class="control-label">Tamaño</label>
                <select asp-for="TamanoRefId" class ="form-control" asp-items="ViewBag.TamanoRefId"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FechaRegistro" class="control-label">Fecha de registro</label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index">Volver a la tabla</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
