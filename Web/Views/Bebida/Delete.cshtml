@model Web.Models.Bebida

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar bebida</h1>

<h3>¿Está seguro que desea borrar esta bebida?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.ImagemBebida" alt="@Model.Descripcion" class="img-fluid" style="max-width: 100%; max-height: 300px;" />
        </dd>
        <dt class = "col-sm-2">
            Clasificación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClasificacionBebida.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Tipo de bebida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoBebida.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Tamaño
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tamano.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la tabla</a>
    </form>
</div>
